
<div id="wrap">
  <header>
    <div class="navbar navbar-fixed-top">
      {{#if session.isAuthenticated}}
      <a {{action 'invalidateSession'}}>Logout</a>
      {{else}}
      {{#link-to 'login'}}Login{{/link-to}}
      {{/if}}
    </div>
    <h2 id="title">Welcome to Authentication</h2>
    <div>A minimal app created by me to learn auth in Ember.</div>
  </header>

  <div class="container-fluid">
    {{outlet}}
  </div>
</div>
<footer class="navbar navbar-fixed-bottom">
  <a href="https://github.com/mnebuerquo/ember-skeleton">Fork me on Github!</a>
</footer>
